{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ES6"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "data/components/*"
      ]
    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true
  }
}